@model Game;
@{
}


<form asp-action="Edit" method="Post">
    <div class="form-row">
        <div class="col">
            <label asp-for="Name">Name</label><input type="text" asp-for="Name" placeholder="Enter Game Name" />
        </div>
        <div class="col">
            <label asp-for="ReleaseDate">Release Date</label><input type="text" asp-for="ReleaseDate" placeholder="Enter Month and Day" />
        </div>
    </div>
    <div class="form-row">
        <div class="col">    
            <label asp-for="Developer">Developer</label><input type="text" asp-for="Developer" placeholder="Enter Developer" />
        </div>
        <div class="col">
            <label asp-for="MetaCritic">MetaCritic</label><input type="number" asp-for="MetaCritic" placeholder="Enter Metacritic score" />
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
    </form>

