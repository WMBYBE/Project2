@model List<Game>
    @{
        ViewData["Title"] = "Home Page";
    }

    <h3 class ="display-3"> 2024 RPGs</h3>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
            <th scope="col"> Name</th>
            <th scope="col">Release Date</th>
            <th scope="col">Developer</th>
            <th scope="col">MetaCritic Score</th>
            <th scope="col">Edit </th>
            <th scope="col">Delete</th>
        </tr>
        </thead>
        @foreach (Game g in Model)
        {
           
            <tr>
                <td>@g.Name</td>
                <td>@g.ReleaseDate</td>
                <td>@g.Developer</td>
                <td>@g.MetaCritic</td>
            @*Creates a warning styled button for each edit section that send the row to the GameForm*@
            <td><a asp-route-id="@g.Id" asp-action="Edit" class="btn btn-warning" role="button">Edit</a> </td>
            @*Creates a danger styled button for each delete section that deletes the row*@
            <td><a asp-route-id="@g.Id" asp-action="Delete" class="btn btn-danger" role="button">Delete</a> </td> 
        </tr>
    }
</table> 
<br/>

<a asp-action="add" class="btn btn-success" role="button">Click here to add a game</a>